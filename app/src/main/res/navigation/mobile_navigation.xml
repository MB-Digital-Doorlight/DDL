<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_hochladen">

    <fragment
        android:id="@+id/navigation_galerie"
        android:name="com.example.ddl.ui.galerie.GalerieFragment"
        android:label="Galerie"
        tools:layout="@layout/fragment_galerie" >
        <action
            android:id="@+id/action_navigation_galerie_to_navigation_hochladen"
            app:destination="@id/navigation_hochladen" />
    </fragment>

    <fragment
        android:id="@+id/navigation_hochladen"
        android:name="com.example.ddl.ui.hochladen.HochladenFragment"
        android:label="Hochladen"
        tools:layout="@layout/fragment_hochladen" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.ddl.ui.notifications.NotificationsFragment"
        android:label="Einstellungen"
        tools:layout="@layout/fragment_notifications" />
</navigation>